# HealthConnect Environment Configuration
# Production-ready configuration

# Firebase Configuration
FIREBASE_API_KEY=your_firebase_api_key
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_STORAGE_BUCKET=your-project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=1234567890
FIREBASE_APP_ID=1:1234567890:web:abcdef1234567890

# Analytics
AMPLITUDE_API_KEY=your_amplitude_api_key

# Internationalization Settings
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,es,fr,de,zh,ja,ar
FORCE_RTL=false
ENABLE_LANGUAGE_DETECTION=true

# Feature Flags
ENABLE_EVENTS=true
ENABLE_CHAT=true
ENABLE_VIDEO_UPLOAD=true
ENABLE_SOCIAL_SHARING=true
ENABLE_USER_BLOCKING=true
ENABLE_CONTENT_MODERATION=true

# Content Moderation
CONTENT_MODERATION_ENABLED=true
AUTO_MODERATION_THRESHOLD=0.8

# Media Upload Configuration
MAX_IMAGE_DIMENSIONS=3840
MAX_IMAGE_SIZE_MB=10
MAX_VIDEO_DURATION_SECONDS=300
MAX_VIDEO_SIZE_MB=100
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,gif,heic
ALLOWED_VIDEO_TYPES=mp4,mov,m4v

# Cache Configuration
CACHE_EXPIRY_HOURS=24
USER_DATA_CACHE_MINUTES=30
MEDIA_CACHE_SIZE_MB=200

# Network Configuration
API_TIMEOUT_SECONDS=10
MAX_RETRIES=3
CONNECTION_CHECK_INTERVAL_SECONDS=30

# Social Sharing Options
DEEP_LINK_DOMAIN=healthconnect.app
SOCIAL_SHARE_BASE_URL=https://healthconnect.app/share

# Error Reporting
ERROR_REPORTING_ENABLED=true
ERROR_SAMPLING_RATE=1.0
